#!/usr/bin/env python

from glob import glob
import os
import subprocess

# install virtualenv
# install 

# install environment
os.chdir("env/")
for environment in glob("env/*"):
    subprocess.call("env/%s" % environment)
os.chdir("../")

# install configs
os.chdir("config/")
subprocess.call("/usr/bin/gem install bundler")
subprocess.call("bundle")
subprocess.call("bundle exec rake install")
os.chdir("../")

# install modules
os.chdir("modules/")
for module in glob("modules/*"):
    subprocess.call("modules/%s" % module)
os.chdir("../")
